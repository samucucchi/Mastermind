<StackPane maxHeight="900.0" maxWidth="555.0" minHeight="900.0" minWidth="555.0" prefHeight="900.0" prefWidth="555.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="900.0" fitWidth="555.0" pickOnBounds="true">
         <image>
            <Image url="@../../images/MMBackground.jpg" />
         </image>
      </ImageView>
      <BorderPane id="pane" prefHeight="200.0" prefWidth="200.0">
         <left>
            <VBox maxHeight="900.0" maxWidth="250.0" minHeight="900.0" minWidth="250.0" prefHeight="900.0" prefWidth="250.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/MMlogo.jpg" />
                     </image>
                  </ImageView>
                  <GridPane fx:id="inputPins" vgap="20.0">
                     <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </GridPane>
                  <Pane fx:id="sequenceContainer" prefHeight="50.0" prefWidth="250.0">
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin></Pane>
                  <Button maxHeight="50.0" maxWidth="250.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#checkSequence" prefHeight="50.0" prefWidth="250.0" text="Check">
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </Button>
                  <Button maxHeight="50.0" maxWidth="250.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#giveUp" prefHeight="50.0" prefWidth="250.0" text="Give up">
                     <VBox.margin>
                        <Insets top="40.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </left>
         <right>
            <ScrollPane cache="true" fitToWidth="true" hbarPolicy="NEVER" maxHeight="900.0" maxWidth="305.0" minHeight="900.0" minWidth="305.0" opacity="0.5" pickOnBounds="false" prefHeight="900.0" prefWidth="305.0" BorderPane.alignment="CENTER">
               <content>
                  <VBox fx:id="previousSequences" spacing="10.0">
                     <padding>
                        <Insets left="10.0" />
                     </padding></VBox>
               </content>
               <padding>
                  <Insets left="5.0" top="5.0" />
               </padding>
            </ScrollPane>
         </right>
      </BorderPane>
   </children>
</StackPane>
