<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox maxHeight="900.0" maxWidth="250.0" minHeight="900.0" minWidth="250.0" prefHeight="900.0" prefWidth="250.0" BorderPane.alignment="CENTER">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="250.0" stroke="BLACK" strokeType="INSIDE" width="250.0" />
            <GridPane fx:id="inputPins" vgap="20.0">
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </GridPane>
            <GridPane fx:id="sequence">
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="62.5" minWidth="62.5" prefWidth="62.5" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="62.5" minWidth="62.5" prefWidth="62.5" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="62.5" minWidth="62.5" prefWidth="62.5" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="62.5" minWidth="62.5" prefWidth="62.5" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints maxHeight="62.5" minHeight="62.5" prefHeight="62.5" valignment="CENTER" vgrow="SOMETIMES" />
               </rowConstraints>
               <VBox.margin>
                  <Insets top="80.0" />
               </VBox.margin>
               <children>
                  <Circle fill="WHITE" onMouseClicked="#removeColor" radius="30.0" stroke="BLACK" strokeType="INSIDE">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </Circle>
                  <Circle fill="WHITE" layoutX="42.0" layoutY="42.0" onMouseClicked="#removeColor" radius="30.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="1" />
                  <Circle fill="WHITE" layoutX="42.0" layoutY="42.0" onMouseClicked="#removeColor" radius="30.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="2" />
                  <Circle fill="WHITE" layoutX="42.0" layoutY="42.0" onMouseClicked="#removeColor" radius="30.0" stroke="BLACK" strokeType="INSIDE" GridPane.columnIndex="3" />
               </children>
            </GridPane>
            <Button maxHeight="50.0" maxWidth="250.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#checkSequence" prefHeight="50.0" prefWidth="250.0" text="Check">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
            <Button maxHeight="50.0" maxWidth="250.0" minHeight="50.0" minWidth="250.0" mnemonicParsing="false" onAction="#giveUp" prefHeight="50.0" prefWidth="250.0" text="Give up">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
   <right>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" maxHeight="900.0" maxWidth="305.0" minHeight="900.0" minWidth="305.0" prefHeight="900.0" prefWidth="305.0" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="previousSequences" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </right>
</BorderPane>
